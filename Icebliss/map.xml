<map proto="1.3.0">
    <name>Icebliss</name>
    <version>2.1.2</version>
    <objective> 
    Be the team with the least deaths after 10 minutes. (Team Deathmatch) 
    </objective>
    <authors>
        <author>nixter1029</author>
        <author>nard164</author>
    </authors>
    <contributors>
		<contributor contribution="XML Debugging, General Help">i2</contributor>
		<contributor contribution="Chest Slave and Testing of Map">Barnyard_Owl</contributor>
    </contributors>
    <rules>
        <rule>Don't spawn camp!</rule>
        <rule>Don't block glitch!</rule>
    </rules>
    <kits>
        <kit name="spawn">
            <item slot="0">stone sword</item>
            <item slot="1" enchantment="arrow infinite:1">bow</item>
            <item slot="2" enchantment="dig speed:3">stone pickaxe</item>
            <item slot="3" amount="16">stone</item>
            <item slot="4" amount="8">cooked beef</item>
            <item slot="5" amount="2">golden apple</item>
			<item slot="6" enchantment="dig speed:3">shears</item>
            <item slot="28" amount="1">arrow</item>
            <potion duration="5" amplifier="10">heal</potion>
            <potion duration="10" amplifier="10">damage resistance</potion>
			<potion duration="600" amplifier="2">speed</potion>
        </kit>
        <kit name="red" parents="spawn">
            <chestplate color="FF0000" damage="-3000">leather chestplate</chestplate>
            <helmet color="FF0000" damage="-3000">leather helmet</helmet>
            <leggings damage="-3000">iron leggings</leggings>
            <boots color="FF0000" damage="-3000">leather boots</boots>
        </kit>
        <kit name="purple" parents="spawn">
            <chestplate color="800080" damage="-3000">leather chestplate</chestplate>
            <helmet color="800080" damage="-3000">leather helmet</helmet>
            <leggings damage="-3000">iron leggings</leggings>
            <boots color="800080" damage="-3000">leather boots</boots>
        </kit>
        <kit name="blue" parents="spawn">
            <chestplate color="0000FF" damage="-3000">leather chestplate</chestplate>
            <helmet color="0000FF" damage="-3000">leather helmet</helmet>
            <leggings damage="-3000">iron leggings</leggings>
            <boots color="0000FF" damage="-3000">leather boots</boots>
        </kit>
        <kit name="yellow" parents="spawn">
            <chestplate color="FFFF00" damage="-3000">leather chestplate</chestplate>
            <helmet color="FFFF00" damage="-3000">leather helmet</helmet>
            <leggings damage="-3000">iron leggings</leggings>
            <boots color="FFFF00" damage="-3000">leather boots</boots>
        </kit>
    </kits>
    <teams>
        <team color="dark red" max="25">Red</team>
        <team color="dark purple" max="25">Purple</team>
        <team color="blue" max="25">Blue</team>
        <team color="yellow" max="25">Yellow</team>
    </teams>
    <filters>
        <!-- Map protection -->
        <filter name="protection" parents="deny-world">
            <deny>
                <block>ice</block>
                <block>chest</block>
				<block>smooth brick</block>
				<block>44</block>
				<block>139</block>
				<block>79</block>
				<block>ladder</block>
				<block>fence</block>
				<block>gravel</block>
				<block>156</block>
				<block>155</block>
				<block>67</block>
            </deny>
        </filter>
    </filters>
    <regions>
        <apply block="protection" message="You are not allowed to destroy the map!">
            <rectangle min="-832,935" max="-1078,691" />
        </apply>
        <rectangle name="Main-Area" min="-819,111,942" max="-1083,19,675" />
        <apply block="deny-all">
            <!-- Spawn Protections -->
            <rectangle name="SpawnProtection-observer" min="-882,746" max="-856,720" />
            <cylinder name="red spawn" base="-885,1,813" radius="15" height="100" />
            <cylinder name="purple spawn" base="-954,1,744" radius="15" height="100" />
            <cylinder name="blue spawn" base="-954,1,883" radius="15" height="100" />
            <cylinder name="yellow spawn" base="-1023,1,813" radius="15" height="100" />
        </apply>
    </regions>
    <playable>
        <region name="Main-Area" />
    </playable>
    <spawns>
        <spawn team="Blue" kit="blue" yaw="90">
            <cylinder base="-885.5,66,813.5" radius="6" height="1"/>
        </spawn>
        <spawn team="Red" kit="red" yaw="0">
            <cylinder base="-954.5,66,744.5" radius="6" height="1"/>
        </spawn>
        <spawn team="Purple" kit="purple" yaw="180">
            <cylinder base="-954.5,66,882.5" radius="6" height="1"/>
        </spawn>
        <spawn team="Yellow" kit="yellow" yaw="-90">
            <cylinder base="-1023.5,66,813.5" radius="6" height="1"/>
        </spawn>
    	<default yaw="45">
			<cylinder base="-870.5,124,733.5" radius="6" height="1"/>
    	</default>
    </spawns>
    <score>
        <time>600</time>
    </score>
    <toolrepair>
        <tool>stone sword</tool>
        <tool>bow</tool>
    </toolrepair>
    <itemremove>
        <item>leather helmet</item>
        <item>leather chestplate</item>
        <item>iron leggings</item>
        <item>leather boots</item>
		<item>bow</item>
		<item>shears</item>
		<item>stone pickaxe</item>
        <item>arrow</item>
        <item>cooked beef</item>
        <item>glass bottle</item>
    </itemremove>
</map>