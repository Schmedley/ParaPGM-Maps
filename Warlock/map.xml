<?xml version="1.0"?>
<map proto="1.3.0">
<name>Warlock</name>
<version>1.2</version>
<objective>Break the obsidian from the enemy team's monument.</objective>
<authors>
    <author>McSpider</author>
</authors>
<contributors>
    <contributor contribution="Map Feedback and XML Coding">Plastix</contributor>
</contributors>
<rules>
   <rule>Don't spawn kill!</rule>
   <rule>Don't block the spawns!</rule>
</rules>
<teams>
    <team color="dark red" max="8">Red Team</team>
    <team color="blue" max="8">Blue Team</team>
</teams>
<maxbuildheight>20</maxbuildheight>
<spawns>
    <spawn team="red" kit="red" yaw="-45"><cuboid min="48,6,-42" max="51,6,-39"/></spawn>
    <spawn team="blue" kit="blue" yaw="-135"><cuboid min="48,6,26" max="51,6,23"/></spawn>
    <default yaw="-90"><cuboid min="113,13,-9" max="116,13,-6"/></default>
</spawns>
<destroyables name="Monument" completion="100%" materials="obsidian">
    <destroyable owner="blue">
        <cuboid min="77,1,29" max="78,3,30"/>
    </destroyable>
    <destroyable owner="red">
        <cuboid min="77,1,-45" max="78,3,-44"/>
    </destroyable>
</destroyables>
<kits>
    <kit name="spawn">
        <item slot="0">iron sword</item>
        <item slot="1" enchantment="arrow infinite:1">bow</item>
        <item slot="28">arrow</item>
        <item slot="2">diamond pickaxe</item>
        <item slot="3">iron axe</item>
        <item slot="4" amount="64" damage="2">wood</item>
        <item slot="5" amount="64" damage="2">wood</item>
        <item slot="7" amount="7">gold nugget</item>
        <item slot="8" amount="16">apple</item>
	    <potion duration="5" amplifier="1">heal</potion>
	    <potion duration="10">damage resistance</potion>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="cd0000">leather helmet</helmet>
        <chestplate color="cd0000" enchantment="protection projectile:2">leather chestplate</chestplate>
        <leggings color="cd0000">leather leggings</leggings>
        <boots color="cd0000">leather boots</boots>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0066cc">leather helmet</helmet>
        <chestplate color="0066cc" enchantment="protection projectile:2">leather chestplate</chestplate>
        <leggings color="0066cc">leather leggings</leggings>
        <boots color="0066cc">leather boots</boots>
    </kit>
</kits>
<toolrepair>
    <tool>iron sword</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron axe</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>arrow</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>wood</item>
    <item>apple</item>
    <item>obsidian</item>
</itemremove>
<tnt>
    <instantignite>on</instantignite>
    <blockdamage>off</blockdamage>
</tnt>
</map>
