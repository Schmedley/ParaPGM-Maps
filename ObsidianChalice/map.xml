<?xml version="1.0"?>
<map proto="1.3.0">
        <name>Obsidian Chalice</name>
        <version>1.1.2</version>
        <objective>Leak the opponent team's core!</objective>
        <authors>
                <author>Tywnis</author>
        </authors>
        <contributors>
                <contributor contribution="XML">RiceOpenOrange</contributor>
                <contributor contribution="XML Fixing">Dinner1111</contributor>
        </contributors>
        <teams>
                <team color="dark red" max="40">Red Team</team>
                <team color="blue" max="40">Blue Team</team>
        </teams>
        <rules>
                <rule>Do not spawnkill!</rule>
                <rule>Do not bridge in the water region!</rule>
        </rules>
        <kit name="spawn">
                <item slot="0">stone sword</item>
                <item slot="1" enchantment="arrow infinite:1">bow</item>
                <item slot="2">diamond pickaxe</item>
                <item slot="3">stone axe</item>
                <item slot="4" damage="1" amount="64">log</item>
                <item slot="5" amount="64">pumpkin pie</item>
                <item slot="28">arrow</item>
                <potion duration="5">heal</potion>
        </kit>
        <kit name="red" parents="spawn">
                <helmet color="CD0000">leather helmet</helmet>
                <chestplate color="CD0000">leather chestplate</helmet>
        </kit>
        <kit name="blue" parents="spawn">
                <helmet color="0066CC">leather helmet</helmet>
                <chestplate color="0066CC">leather chestplate</helmet>
        </kit>
        <spawns>
                <spawns team="blue" yaw="-90">
                        <spawn team="blue" kit="blue">
                                <cuboid min="1989,11,-1265" max="1992,13,-1262"/>
                        </spawn>
                        <spawn team="blue" kit="blue">
                                <cuboid min="1989,11,-1195" max="1992,13,-1192"/>
                        </spawn>
                </spawns>
                <spawns team="red" yaw="90">
                        <spawn team="red" kit="red">
                                <cuboid min="2172,11,-1192" max="2169,13,-1195"/>
                        </spawn>
                        <spawn team="red" kit="red">
                                <cuboid min="2172,11,-1262" max="2169,13,-1265"/>
                        </spawn>
                </spawns>
                <default yaw="0">
                        <cuboid min="2077,74,-1324" max="2084,74,-1326"/>
                </default>
        </spawns>
        <cores material="obsidian" leak="2">
                <core team="blue" name="Chalice">
                        <region min="1983,14,-1232" max="1978,24,-1227"/>
                </core>
                <core team="red" name="Chalice">
                        <region min="2178,14,-1232" max="2184,24,-1226"/>
                </core>
        </cores>
        <filters>
                <filter name="no-bridge" parents="deny-place"></filter>
                <filter name="spawn-red" parents="deny-enter">
                        <allow>
                                <team>red</team>
                        </allow>
                </filter>
                <filter name="spawn-blue" parents="deny-enter">
                        <allow>
                                <team>blue</team>
                        </allow>
                </filter>
        </filters>
        <regions>
                <apply block-place="no-bridge" message="You may not bridge in the water region!">
                        <cuboid min="2014,7,-1245" max="2037,7,-1214"/>
                        <cuboid min="2124,7,-1243" max="2147,7,-1212"/>
                </apply>
                <apply enter="spawn-red">
                        <cuboid name="r-1" min="2172,11,-1192" max="2169,13,-1195"/>
                        <cuboid name="r-2" min="2172,11,-1262" max="2169,13,-1265"/>
                </apply>
                <apply enter="spawn-blue">
                        <cuboid name="b-1" min="1989,11,-1265" max="1992,13,-1262"/>
                        <cuboid name="b-2" min="1989,11,-1195" max="1992,13,-1192"/>
                </apply>
                <apply block="deny-all" message="Please do not pick up Lava from the Chalice!">
                        <cuboid min="2182,20,-1229" max="2181,20,-1228"/>
                        <cuboid min="1990,20,-1228" max="1991,20,-1229"/>
                </apply>
                <apply block="deny-all">
                        <region name="r-1"/>
                        <region name="r-2"/>
                        <region name="b-1"/>
                        <region name="b-2"/>
                </apply>
        </regions>
        <toolrepair>
                <tool>stone sword</tool>
                <tool>bow</tool>
                <tool>diamond pickaxe</tool>
                <tool>stone axe</tool>
        <toolrepair>
        <itemremove>
                <item>leather helmet</item>
                <item>leather chestplate</item>
        </itemremove>
</map>